{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/HWMONProfile",
  "definitions": {
    "HWMONProfile": {
      "title": "HWMONProfile",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "hwmon_name": {
          "type": "string",
          "description": "hwmon 目录下 name 文件内容"
        },
        "fans": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Fans"
          },
          "minItems": 1,
          "description": "风扇配置信息"
        }
      },
      "required": ["hwmon_name", "fans"]
    },
    "Fans": {
      "title": "Fans",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "fan_name": {
          "type": "string",
          "description": "显示在 UI 上的风扇名称"
        },
        "pwm_mode": {
          "type": "number",
          "enum": [0, 1],
          "description": "写入的模式 0.普通模式(对单个文件写入) 1.对多个文件写入同样的数值"
        },
        "black_list": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "黑名单, 匹配 /sys/devices/virtual/dmi/id/product_name. 不使用该配置"
        },
        "temp_mode": {
          "type": "number",
          "enum": [0, 1],
          "description": "温度使用哪个数据  0.cpu温度(不可用时切换到gpu温度)  1.gpu温度(不可用时切换到cpu温度)"
        },
        "pwm_enable": {
          "$ref": "#/definitions/PWMEnable",
          "description": "PWMEnable 配置信息"
        },
        "pwm_input": {
          "$ref": "#/definitions/PWMInput",
          "description": "PWMInput 配置信息"
        },
        "pwm_write": {
          "$ref": "#/definitions/PWMWrite",
          "description": "PWMWrite 配置信息"
        }
      },
      "required": []
    },
    "PWMEnable": {
      "title": "PWMEnable",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "manual_value": {
          "type": "number",
          "description": "手动模式写入的值"
        },
        "auto_value": {
          "type": "number",
          "description": "自动模式写入的值"
        },
        "pwm_enable_path": {
          "type": "string",
          "description": "写入数值文件路径"
        },
        "pwm_enable_second_path": {
          "type": "string",
          "description": "写入数值文件路径(次选, pwm_enable_path 不存在时使用该路径)"
        }
      },
      "required": ["manual_value", "auto_value", "pwm_enable_path"]
    },
    "PWMInput": {
      "title": "PWMInput",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "hwmon_label": {
          "type": "string",
          "description": "读转速的hwmon标签(读取转速和写入转速可能不在同一个hwmon)"
        },
        "pwm_read_path": {
          "type": "string",
          "description": "读取数值文件路径"
        },
        "pwm_read_max": {
          "type": "number",
          "description": "读取数值最大值"
        }
      },
      "required": ["hwmon_label", "pwm_read_path", "pwm_read_max"]
    },
    "PWMWrite": {
      "title": "PWMWrite",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "pwm_write_max": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          },
          "required": ["default"],
          "description": "写入转速最大值(根据不同产品名写入不同的最大值，没有则使用默认)"
        },
        "pwm_write_path": {
          "type": "string",
          "description": "写入数值文件路径"
        },
        "pwm_mode1_write_path": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PWMWriteMode1Path"
          },
          "description": "写入转速和温度的文件路径 多组"
        },
        "pwm_mode1_auto_value": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PWMWriteMode1Value"
          },
          "description": "写入转速和温度的数值 多组"
        }
      },
      "required": []
    },
    "PWMWriteMode1Path": {
      "title": "PWMWriteMode1Path",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "pwm_write": {
          "type": "string",
          "description": "写入转速路径"
        },
        "temp_write": {
          "type": "string",
          "description": "写入温度路径"
        }
      },
      "required": ["pwm_write", "temp_write"]
    },
    "PWMWriteMode1Value": {
      "title": "PWMWriteMode1Value",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "pwm_write_value": {
          "type": "number",
          "description": "写入转速值"
        },
        "temp_write_value": {
          "type": "number",
          "description": "写入温度值"
        }
      },
      "required": ["pwm_write_value", "temp_write_value"]
    }
  }
}
